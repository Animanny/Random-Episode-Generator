doctype html
html
  head
    title Random Episode Generator
    script(src="static/script.js")
    link(rel="stylesheet",href="static/main.css")
    link(rel="stylesheet",href="https://fonts.googleapis.com/css?family=Open+Sans:600&display=swap")
  body
    div#id
      h1 Random Episode Generator
      h3 Enter a title and receive a random episode
      input#showNameInput(placeholder="Show Title",onkeydown="search(this)")
